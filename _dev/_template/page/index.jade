extends ../layout/layout

block title
    | btn-G

block content
    .wrapper.wrapper_content
        .description
            p.description__text This is a my first JS project
        section.wrapper__coll
            // button width
            .adjust.btnwidth
                .adjust__item
                    h3.adjust__title Change button width (text +)
                    .adjust__input
                        input.btnwidth__val(type="text")
                        span.adjust__text px
                .adjust__item
                    .btnwidth__slider
                        
            // button height
            .adjust.btnheight
                .adjust__item
                    h3.adjust__title Change button height (text +)
                    .adjust__input
                        input.btnheight__val(type="text")
                        span.adjust__text px
                .adjust__item
                    .btnheith__slider
                        
            // button font-size
            .adjust.fontsize
                .adjust__item
                    h3.adjust__title Change font-size
                    .adjust__input
                        input.fontsize__val(type="text")
                        span.adjust__text px
                .adjust__item
                    .fontsize__slider
                        
            // button border-width 
            .adjust.borderwidth
                .adjust__item
                    h3.adjust__title Change border-width
                    .adjust__input
                        input.borderwidth__val(type="text")
                        span.adjust__text px
                .adjust__item
                    .borderwidth__slider
                        
            // button border-radius
            .adjust.btnradius
                .adjust__item
                    h3.adjust__title Change border-radius
                    .adjust__input
                        input.btnradius__val(type="text")
                        span.adjust__text px
                .adjust__item
                    .btnradius__slider
                        
                        
                        
            // button text color
            .adjust.colortext
                .adjust__item
                    input.colortext__change.color(value="EEEEEE")
                    h3.adjust__title Change text color
                        
            // button background color
            .adjust.bgcolor
                .adjust__item
                    input.bgcolor__change.color(value="446925")
                    h3.adjust__title Change BG color
                        
            // button border color 
            .adjust.bordercolor
                .adjust__item
                    input.bordercolor__change.color(value="FFDB29")
                    h3.adjust__title Change border color
                        
        section.wrapper__coll
            .result
                .result__row.result__row_button
                    .button button 
                .result__row
                    textarea.result__item.html
                .result__row
                    textarea.result__item.css
                        